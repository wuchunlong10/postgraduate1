<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
  </listener>
 <servlet>
    <servlet-name>SpringMVCServelet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:springmvc.xml</param-value>
	</init-param>
    <load-on-startup>3</load-on-startup>
 </servlet>
  <servlet-mapping>
    <servlet-name>SpringMVCServelet</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <filter>
  	<filter-name>LoginFilter</filter-name>
  	<filter-class>Filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/evaluate.jsp</url-pattern>
  </filter-mapping>
   <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/fail_number.jsp</url-pattern>
  </filter-mapping>
     <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/index.jsp</url-pattern>
  </filter-mapping>
     <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/login_out.jsp</url-pattern>
  </filter-mapping>
     <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/modify_success.jsp</url-pattern>
  </filter-mapping>
     <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/personalinfor_modify.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/QueryCourse.jsp</url-pattern>
  </filter-mapping>
    <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/QueryScore.jsp</url-pattern>
  </filter-mapping>
    <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/selectcourse_fail_reselect.jsp</url-pattern>
  </filter-mapping>
    <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/selectcourse_success.jsp</url-pattern>
  </filter-mapping>
    <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/SelectCourse.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/StudentHomePage.jsp</url-pattern>
  </filter-mapping>
    <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/loginout.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>Filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
  	<welcome-file>role_login.jsp</welcome-file>
  </welcome-file-list>
</web-app>